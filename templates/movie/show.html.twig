{% extends 'base.html.twig' %}

{% block title %}Movie{% endblock %}

{% block body %}
    <div class="d-flex flex-column container justify-content-center">
        <h2>Movie</h2>

        <div class="card" style="width: 80%;">
            <div class="card-header">DÃ©tails du film</div>
            <img class="card-img-top"  src="{{ movie.poster }}" alt="Card image cap" height="200" style="object-fit: cover; -webkit-backdrop-filter: blur(2em);" />
            <div class="card-body">
                <h5>{{ movie.title}}</h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">{{ movie.country }}</li>
                    <li class="list-group-item">{{ movie.releasedAt ? movie.releasedAt|date('d-m-Y') : '' }}</li>
                    <li class="list-group-item">{{ movie.plot }}</li>
                    <li class="list-group-item">{{ movie.rated }}</li>
                    <li class="list-group-item">
                        <a class="btn btn-primary" href="{{ path('app_movie_index') }}">Retour</a>
                    </li>

                </ul>
            </div>
        </div>

        <div class="d-flex gap-2">
            {% if is_granted('ROLE_ADMIN')%}
                <a class="btn btn-primary" href="{{ path('app_movie_edit', {'id': movie.id}) }}">Modifier</a>
                {{ include('movie/_delete_form.html.twig') }}
            {% endif  %}
        </div>
    </div>
{% endblock %}
